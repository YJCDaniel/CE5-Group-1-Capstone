[
    {
      "cpu": 1024,
      "essential": true,
      "image": "${image_url}",
      "memory": 2048,
      "name": "${container_name}",
      "portMappings": [
        {
            "name": "${port_name}",
            "containerPort": 3000,
            "hostPort": 3000,
            "protocol": "tcp",
            "appProtocol": "http"
        }
      ],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
                "awslogs-create-group": "true",
                "awslogs-group": "${log_group_name}",
                "awslogs-region": "${log_group_region}",
                "awslogs-stream-prefix": "${log_group_prefix}"
          }
      }
    }
  ]